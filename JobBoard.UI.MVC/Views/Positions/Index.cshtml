@model IEnumerable<JobBoard.Data.EF.Position>

@{
    ViewBag.Title = "All Company Positions";
}

<h2>@ViewBag.Title</h2>
<br /><br />
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PositionId}, new { @class = "btn btn-dark" }) |

            @Html.ActionLink("Details", "Details", new { id = item.PositionId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PositionId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
