@model IEnumerable<JobBoard.Data.EF.Location>

@{
    ViewBag.Title = "All Store Locations";
}

<h2>@ViewBag.Title</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })

    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StoreNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
           Store Manager
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.FullName)
            </td>
            <td>

                @if (User.IsInRole("Admin")  || User.IsInRole("Manager"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.LocationId }, new { @class = "btn btn-dark" }) @:|

                        @Html.ActionLink("Details", "Details", new { id = item.LocationId }, new { @class = "btn btn-primary" }) @:|
                        @Html.ActionLink("Delete", "Delete", new { id = item.LocationId }, new { @class = "btn btn-danger" })

                    }

                </td>
        </tr>
    }

</table>
