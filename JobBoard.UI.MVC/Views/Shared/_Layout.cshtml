    @Styles.Render("~/Content/css")
    <style>
        footer {
            background: #42A5F5;
            color: white;
            line-height: 50px;
            padding: 0 20px;
        }
        
        main{
            margin-bottom:200px;
            
        }

    </style>
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center">
            <a href="@Url.Action("Home","Index")">
                <img src="~/_Archive/Logo/eeae266a-fa97-4bd0-b6dc-0964b6380dc7_200x200.png" style="max-height:40px;" />

            </a>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo mr-auto"><img src="~/Content/assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav class="nav-menu d-none d-lg-block">
                <ul>

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Positions", "Index", "Positions")</li>
                    <li>@Html.ActionLink("Locations", "Index", "Locations")</li>
                    <li>@Html.ActionLink("Open Positions", "Index", "OpenPositions")</li>
                    @if (User.IsInRole("Manager") || User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Applications", "Index", "Applications")</li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Application Status", "Index", "ApplicationStatus")</li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Users Admin", "Index", "UsersAdmin")</li>
                    }
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>

                </ul>

                
            </nav><!-- .nav-menu -->
            


        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    

    <main id="main">

        <br />
    <br />
        <div class="container"> @RenderBody()</div>
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <footer id="footer">

        
        <div class="container d-md-flex py-4">

            <div class="mr-md-auto text-center text-md-left">
                <div class="copyright">
                    &copy; Copyright @DateTime.Now.Year  <strong><span>Young Investments</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    <!-- All the links in the footer should remain intact. -->
                    <!-- You can delete the links only if you purchased the pro version. -->
                    <!-- Licensing information: https://bootstrapmade.com/license/ -->
                    <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/company-free-html-bootstrap-template/ -->
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                </div>
            </div>
            
        </div>
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

